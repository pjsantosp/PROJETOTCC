                @Html.DropDownList("SetorOrigemId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SetorOrigemId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SetorDestinoId, "SetorDestinoId", htmlAttributes: new { @class = "control-label col-md-2" })
