@model SISPTD.Models.Movimentacao

@{
    ViewBag.Title = "Movimentação";
}


<div class="panel panel-default">
    <div class="panel-body">
       @using (Html.BeginForm())
       {
        @Html.AntiForgeryToken()

            <h4>Movimentação de  Processo</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-2 col-xs-4">
                    <div class="input-group">
                        <input type="number" id="nProcesso" name="processoId" class="form-control" value="@ViewBag.processoId" />
                        <span class="input-group-btn"><button type="button" id="btnBuscaProc" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button></span>
                    </div>
                </div>
                <div class="col-md-3 col-xs-5">
                    <div class="form-group">
                        <input type="text" readonly id="pacienteCpfProc" data-id="" class="form-control" name="name" />
                        @*<input type="text" readonly id="pacienteNomeProc" data-id="" class="form-control " name="name" />*@
                    </div>
                </div>
                <input type="hidden" id="idDoPaciente" name="pessoaId" value="@ViewBag.pacienteId" />

                <div class="col-md-7 col-xs-9">
                    <div class="form-group">
                        <input type="text" readonly id="pacienteNomeProc" data-id="" class="form-control " name="name" value="@ViewBag.processoPaciente" />
                    </div>
                </div>



            </div>
            <div class="row">
                    <div class="col-md-6 col-xs-8">
                        <div class="form-group">
                            @Html.Label("Enviado Por")
                            @Html.DropDownList("usuarioEnviouId", null, htmlAttributes: new { @class = "form-control chosen-select" })
                            @Html.ValidationMessageFor(model => model.usuarioEnviouId, "", new { @class = "text-danger" })
                        </div>
                </div>

                    <div class="col-md-6 col-xs-8">
                        <div class="form-group">
                            @Html.Label("Recebido Por")
                            @Html.DropDownList("usuarioRecebeuId", null, htmlAttributes: new { @class = "form-control chosen-select" })
                            @Html.ValidationMessageFor(model => model.usuarioRecebeuId, "", new { @class = "text-danger" })
                        </div>
                </div>


            </div>

            <div class="row">
                    <div class="col-md-6 col-xs-8">
                        <div class="form-group">
                            @Html.Label("Origem")
                            @Html.DropDownList("setorEnviouId", null, htmlAttributes: new { @class = "form-control chosen-select" })
                            @Html.ValidationMessageFor(model => model.setorEnviouId, "", new { @class = "text-danger" })
                        </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6 col-xs-8">
                        @Html.Label("Destino")
                        @Html.DropDownList("setorRecebeuId", null, htmlAttributes: new { @class = "form-control chosen-select" })
                        @Html.ValidationMessageFor(model => model.setorRecebeuId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>




           


       }

    </div>
</div>
<div class="well well-sm">
    <button type="submit" name="name" class="btn btn-primary "  > <i class="fa fa-floppy-o fa-lg"></i>  Gravar</button>
    <a class="btn btn-danger pull-right" href="@Url.Action("Index","Movimentacao")"> <i class="fa fa-arrow-left fa-lg"></i>  Lista de Movimentação</a>
   @* @Html.ActionLink("Voltar para lista", "Index", null, new { @class = "btn btn-link pull-right" })*@
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
