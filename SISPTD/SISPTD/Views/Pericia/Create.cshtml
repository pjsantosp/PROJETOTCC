@model SISPTD.Models.Pericia

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-body">
            <h4>Pericia</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.pessoaId, "Paciente", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("pessoaId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.pessoaId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.cidId, "Cid", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("cidId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.cidId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.descricao, htmlAttributes: new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.descricao, 5, 170, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.medicoId, "medicoId", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("medicoId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.medicoId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.situacao, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.situacao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.situacao, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
    </div>
 
    <div class="well well-sm">
        <input type="submit" class="btn btn-info" name="name" value="Gravar " />
        @Html.ActionLink("Voltar para Lista", "Index", null, new {@class="btn btn-link pull-right" })
    </div>
}


