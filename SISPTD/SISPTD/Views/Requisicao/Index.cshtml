@model IEnumerable<SISPTD.Models.Requisicao>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3><i class="fa fa-plane" aria-hidden="true"></i> Gerar Requisição de Viajem</h3>

    <p>
        @Html.ActionLink("Nova Requisição", "Create", null, new {@class="btn btn-primary" })
    </p>
    <table class="table">
        <tr>
         
            <th>
                @Html.DisplayNameFor(model => model.CidadeDestino.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CidadeOrigem.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dtRequisicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.observacoes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.via)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.trecho)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
          
            <td>
                @Html.DisplayFor(modelItem => item.CidadeDestino.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CidadeOrigem.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dtRequisicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.observacoes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.via)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trecho)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.requisicaoId }) |
                @Html.ActionLink("Details", "Details", new { id=item.requisicaoId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.requisicaoId })
            </td>
        </tr>
    }
    
    </table>

