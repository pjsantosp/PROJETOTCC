@model SISPTD.Models.Pericia



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-body">
            <h4>Pericia</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.pacientePessoaId, "Paciente", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("pessoaId", null, htmlAttributes: new { @class = "form-control chosen-select" })
                        @Html.ValidationMessageFor(model => model.pacientePessoaId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.cidId, "Cid", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("cidId", null, htmlAttributes: new { @class = "form-control chosen-select" })
                        @Html.ValidationMessageFor(model => model.cidId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.Label("Medico", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("medico", ViewBag.medico as SelectList, new { @class = "form-control chosen-select" })
                        @Html.ValidationMessageFor(model => model.pacientePessoaId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
         
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.descricao, htmlAttributes: new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.descricao, 5, 155, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>
            <div class="row">
               
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.situacao, htmlAttributes: new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.situacao, 5, 155, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.situacao, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.Label("Primeira Vez")
                            @Html.RadioButtonFor(model => model.TipoPericia, "Primeira Vez")
                            @Html.Label("Retorno")
                            @Html.RadioButtonFor(model => model.TipoPericia, "Retorno")
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
 
    <div class="well well-sm">
        <input type="submit" class="btn btn-info" name="name" value="Gravar " />
        @Html.ActionLink("Voltar para Lista", "Index", null, new {@class="btn btn-link pull-right" })
    </div>
}


