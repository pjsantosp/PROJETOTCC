@model SISPTD.Models.Pessoa
    <div class="btn-group">
    <a class="btn-group btn-sm btn-primary" title="Detalhe" href="@Url.Action("Details", "Pessoa",new { id= Model.pessoaId })" aria-label="Skip to main navigation">
        <i class="fa fa-bars " aria-hidden="true"></i>
    </a>
</div>


@if (User.IsInRole("Gerente") || User.IsInRole("Administrador") || User.IsInRole("Funcionario"))
{
    <div class="btn-group">
        <a class="btn-group btn-sm btn-primary" title="Editar" href="@Url.Action("Edit", "Pessoa",new { id= Model.pessoaId })" aria-label="Skip to main navigation">
            <i class="fa fa-pencil " aria-hidden="true"></i>
        </a>

        <a class="btn-group btn-sm btn-primary" title="Adicionar Acompanhante" href="@Url.Action("CreateAcompanhante", "Pessoa", new { acompanhanteId= Model.pessoaId })" aria-label="Skip to main navigation">
            <i class="fa fa-users " aria-hidden="true"></i>
        </a>
    </div>


}
