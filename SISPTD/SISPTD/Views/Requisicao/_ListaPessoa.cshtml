@model IEnumerable<SISPTD.Models.Pessoa>
@if (Model != null && Model.Any())
{
    <div class="panel panel-default">
        <div class="panel panel-heading"><strong> <i class="fa fa-users" aria-hidden="true"></i> Acompanhantes</strong></div>
        <div class="panel-body">
            <table class="table table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.cpf)
                    </th>
                    <th>
                        @Html.DisplayName("Acompanhante")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dt_Nascimento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.idade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cns)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cel)
                    </th>
                    <th></th>
                    <th>
                        @Html.DisplayName("Remover")
                    </th>
                    <th></th>
                </tr>
               
                @{var pos = 0;}
                @foreach (var item in Model)
                {
                    
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.cpf)
                                <input type="hidden" id="cpfAcompanhante"  value="@item.cpf" name="Pessoa[@pos].cpf" />
                                <input type="hidden" id="removeAcompanhante" value="@item.pessoaId" name="Pessoa[@pos].pessoaId" />
                                <input type="hidden" value="@item.nome_Pai" name="Pessoa[@pos].nome_Pai" />
                                <input type="hidden" value="@item.nome_Mae" name="Pessoa[@pos].nome_Mae" />

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nome)
                                <input type="hidden" value="@item.nome" name="Pessoa[@pos].nome" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dt_Nascimento)
                                <input type="hidden" value="@item.dt_Nascimento" name="Pessoa[@pos].dt_Nascimento" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.idade)
                                <input type="hidden" value="@item.idade" name="Pessoa[@pos].idade" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cns)
                                <input type="hidden" value="@item.cns" name="Pessoa[@pos].cns" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tel)
                                <input type="hidden" value="@item.tel" name="Pessoa[@pos].tel" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cel)
                                <input type="hidden" value="@item.cel" name="Pessoa[@pos].cel" />
                            </td>
                            <td></td>
                            <td class="text-center">
                                <a href="#" onclick="RemoveAcompanhanteLista();" data-dismiss="modal" data-id="@pos" data-url="@Url.Action("RemoveAcompanhante", "Requisicao") " id="RemoveItens" class="acompId "> <i class="glyphicon glyphicon-remove"></i> </a>
                            </td>
                        </tr>
                   

                    pos++;
                }
            </table>
        </div>
    </div>
                    }
