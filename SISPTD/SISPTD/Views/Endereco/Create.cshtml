@model SISPTD.Models.Endereco

@{
    ViewBag.Title = "Create";

}



<div class="well well-sm">
    <span><i class="glyphicon glyphicon-road"></i></span>
    <span class="pull-right"> Cadastrar endereços para: <strong>@ViewBag.pessoaId</strong></span>
</div>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <input type="hidden" id="pessoaId" name="pessoaId" value="@Model.pessoaId" />

            @Html.AntiForgeryToken()

            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.cep, htmlAttributes: new { autofocus = "", @class = "control-label " })
                                @Html.EditorFor(model => model.cep, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.cep, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.rua, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.rua, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.rua, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelFor(model => model.numero, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.numero, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.numero, "", new { @class = "text-danger" })
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.bairro, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.bairro, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.bairro, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.IdCidade, "Cidades", htmlAttributes: new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.IdCidade, ViewBag.Cidade as SelectList, new { @class = "form-control chosen-select" })
                                @Html.ValidationMessageFor(model => model.IdCidade, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="well well-sm">
                <input type="submit" value="Salvar Endereço" class="btn btn-primary btn-confirm" />
                @Html.ActionLink("Voltar para lista", "Index", "Pessoa", new { @class = "btn btn-link pull-right" })
            </div>
        }
   



  
