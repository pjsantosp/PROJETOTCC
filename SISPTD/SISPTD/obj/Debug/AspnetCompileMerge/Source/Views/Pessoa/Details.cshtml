<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><strong>Acompanhantes</strong></h3>
    </div>
    <div class="panel-body">
      
    </div>
    <table class="table table-striped ">
        <tr>
            <th>
                @Html.LabelFor(model => model.cpf, new { @class = "control-label" })
            </th>
            <th>
                @Html.LabelFor(model => model.nome, new { @class = "control-label" })
            </th>
            <th>
                @Html.LabelFor(model => model.rg, new { @class = "control-label" })
            </th>
            <th>
                @Html.LabelFor(model => model.orgaoemissor, new { @class = "control-label" })
            </th>
            <th>
                @Html.LabelFor(model => model.dt_Emissao, new { @class = "control-label" })
            </th>
            <th>
                @Html.LabelFor(model => model.cns, new { @class = "control-label" })
            </th>
            <th>
                @Html.Label("Editar" )
            </th>
        </tr>
        @foreach (var item in @ViewBag.acompanhante)
        {
            <tr>
                <td>
                    @item.cpf
                </td>
                <td>
                    @if (User.IsInRole("Medico"))
                    {
                        @Html.Raw("<p>"+item.nome+"</p>");
                    }
                    else
                    {
                        @item.nome
                        
                    }
                </td>
                <td>
                    @item.rg
                </td>
                <td>
                    @item.orgaoemissor
                </td>
                <td>
                    @item.dt_Emissao
                </td>
                <td>
                    @item.cns
                </td>
                <td>
                    <a class="btn-group btn-sm btn-primary" title="Editar Acompanhante" href="@Url.Action("EditarAcompanhante", "Pessoa",new { id= item.pessoaId })" aria-label="Skip to main navigation">
                        <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
<div class="well well-sm" style="height:50px;">
    @if (!User.IsInRole("Medico"))
    {
        <a class="btn btn-primary" href="@Url.Action("Edit",  new { id = Model.pessoaId })">Editar</a>

    }

    @*@Html.ActionLink("Voltar para lista", "Index", null, new { @class = "btn btn-link pull-right" })*@
    <a class="btn btn-success pull-right" href="#" onclick="history.back()">Voltar</a>
</div>

