<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="shortcut icon" href="~/Imagens/favicon.ico">
    <title>@ViewBag.Title - SPTD</title>
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/content/datatables/css/datatables.bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div class="row">
        <nav class="navbar navbar-menu navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>*@

                    @Html.ActionLink("Tratamento Fora Domicilio", "Index", "Pessoa", new { area = "" }, new { @class = "navbar-brand navbar-menu menu-slim" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">

                        <li class="dropdown">

                            <a href="#" class="dropdown-toggle text-branco" data-toggle="dropdown" >
                                <i class="fa fa-user fa-fw" ></i> <span >@Session["NomeLogin"]</span> <b class="caret"></b>
                                <span hidden>@User.Identity.Name </span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#"></a></li>
                                <li class="divider"></li>
                                <li><a href="@Url.Action("TrocaSenha", "User")"><i class="glyphicon glyphicon-user"></i> Trocar Senha</a></li>
                                <li class="divider"></li>
                                <li><a title="Clique para sair do sistema" href="@Url.Action("Deslogar","Login")"><i class="glyphicon glyphicon-off"></i> Sair </a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>

        </nav>
    </div>


    <div class="row"style="margin-top:54px">
        @if (User.IsInRole("Medico"))
        {
            @Html.Partial("_Menu2")
        }
        else
        {
            @Html.Partial("_Menu")
        }
    </div>

    <div class="container  ">

        @Html.Partial("_ErrosSystem")
        @RenderBody()


        @*<hr />
            <footer>
                <p>&copy; Projeto de Conclusão de Curso @DateTime.Now.Year</p>
            </footer>*@

    </div>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")*@
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="~/scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.pt-BR.min.js"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script src="~/Scripts/chosen.jquery.min.js"></script>
    <script src="~/Scripts/chosen-ajax.jquery.js"></script>
    <script src="~/Scripts/datatables/jquery.datatables.min.js"></script>
    <script src="~/Scripts/Utils.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
