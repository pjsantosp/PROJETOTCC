@model SISPTD.Models.Agendamento

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-body">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.pessoaId, "Paciente", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("pessoaId", null, htmlAttributes: new { @class = "form-control chosen-select" })
                        @Html.ValidationMessageFor(model => model.pessoaId, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="col-md-6 ">
                    <div class="form-group">
                        @Html.LabelFor(model => model.dt_Agendamento, htmlAttributes: new { @class = "control-label col-md-8" })
                        @Html.EditorFor(model => model.dt_Agendamento, new { htmlAttributes = new { @type = "Date", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.dt_Agendamento, "", new { @class = "text-danger" })
                    </div>
                </div>
              
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        @Html.LabelFor(model => model.observacoes, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextAreaFor(model => model.observacoes,5,150, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.observacoes, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="well well-sm">
        <input type="submit" name="name" class="btn btn-primary " value="Salvar " />
        @Html.ActionLink("Voltar para lista", "Index", null, new { @class = "btn btn-link pull-right" })
    </div>

}

