@model IEnumerable<SISPTD.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2 class="glyphicon glyphicon-user">Usuários do Sistema </h2>
<br /><br />
@using (Html.BeginForm())
{
    <div class="input-group">
        <div class="input-group-btn">
            <a href="@Url.Action("Create")" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Novo</a>
        </div>
        @Html.TextBox("user", Request.QueryString["user"], new { autofocus = "", @class = "col-md-2 form-control", placeholder = "Procure por CPF" })
        <span class="input-group-btn">
            <button class="btn btn-primary" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </span>
    </div>
}
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pessoa.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.login)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pessoa.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.login)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.usuarioId }) |
            @Html.ActionLink("Details", "Details", new { id=item.usuarioId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.usuarioId })
        </td>
    </tr>
}

</table>
