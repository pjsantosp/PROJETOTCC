@model SISPTD.Models.Clinica

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-default">
        <div class="panel-body">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.IdCidade, "Cidade", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("IdCidade", null, htmlAttributes: new { @class = "form-control chosen-select" })
                        @Html.ValidationMessageFor(model => model.IdCidade, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="col-md-6 ">
                    <div class="form-group">
                        @Html.LabelFor(model => model.nome_Clinica, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.nome_Clinica, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nome_Clinica, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.tel_Clinica, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.tel_Clinica, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.tel_Clinica, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="well well-sm">
                    <input type="submit" name="name" class="btn btn-primary " value="Salvar " />
                    @Html.ActionLink("Voltar para lista", "Index", null, new { @class = "btn btn-link pull-right" })
                </div>
            </div>


        </div>
    </div>

}
