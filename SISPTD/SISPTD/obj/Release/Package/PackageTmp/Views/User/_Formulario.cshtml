@model SISPTD.Models.User
<div class="row">
    <div style="display:none" id="btnCriaPessoa" class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        Ops! Não ha uma pessoa para esse CPF, Deseja Cadastra?
        <a title="Cadastra Pessoa" class="btn btn-primary" href="@Url.Action("CreateFuncionario", "Pessoa")">Cadastra Funcionario</a>
    </div>

    @using (Html.BeginForm("Create", "User", FormMethod.Post))
    {
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title"><i class="fa fa-user" aria-hidden="true"></i> Cadastro de Usuário</h3>
</div>
            <div class="panel-body">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.login, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.login, "", new { @class = "text-danger" })
                            <div class="input-group">
                                @Html.TextBox("login", Request.QueryString["CPF"], new { autofocus = "", @class = "  cpf col-md-2 form-control", placeholder = "Procure por CPF" })
                                <span class="input-group-btn"><button type="button" id="btnBuscarPessoaUser" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.pessoaId, "Pessoa", htmlAttributes: new { @class = "control-label" })
                            <input type="text" id="nomePessoaUser" readonly class="form-control paciente" name="nomePessoaUser" value=" " />
                            <input type="hidden" id="idPessoaUser" class="form-control paciente" name="pessoaId" value=" " />

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.Label("Setor")
                            @Html.DropDownList("setorId", new List<SelectListItem>(), "", new { @class = "form-control", data_url = @Url.Action("BuscaSetor", "Setor") })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Perfil, new { @class = "control-label" })
                            @Html.EnumDropDownListFor(model => model.Perfil, " ", new { @class = "form-control chosen-select" })


                        </div>
                        <div class="well well-sm">
                            <button type="submit" name="name" class="btn btn-primary "> <i class="fa fa-floppy-o fa-lg"></i>  Gravar</button>
                            <a class="btn btn-danger pull-right" href="@Url.Action("Index","User")"> <i class="fa fa-backward fa-lg"></i>  Voltar Para Lista  </a>
                        </div>
                    </div>
                </div>
            </div>
           
        </div>



               
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    var urlUsuario = '@Url.Action("Pesquisar","Pessoa")';
   

</script>


