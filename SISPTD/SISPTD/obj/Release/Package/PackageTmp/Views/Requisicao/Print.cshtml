@model SISPTD.Models.Requisicao
@{
    Layout = "~/Views/Shared/_LayoutPrint.cshtml";
    ViewBag.Title = "Requisição";
}
<h2 class="" style="text-align:center"><i class="fa fa-plane" aria-hidden="true"></i> Requisição de Passagem Tratamento fora Domicilio</h2>
<div>
    <h2> Requisição Nº @Html.DisplayFor(model => model.requisicaoId) </h2>
    <hr />
    <div class="col-md-12">
        <p>
            <h3>
                De acordo com a portaria SAS/MS n° 055 de fevereiro de 1999, requisitamos o fornecimento da(s) passagem(ns) abaixo relacionada(s).
            </h3>
        </p>
    </div>


    <div class="row">


        <table class="table table-condensed table-bordered">
            <tr>
                <th colspan="4" class="text-center active"><h3>@Html.DisplayName("Informações de Viajem")</h3></th>
            </tr>
            <tr>
                <th>
                    @Html.DisplayName("ORIGEM")
                </th>
                <th>
                    @Html.DisplayName("DESTINO")
                </th>
                <th>
                    @Html.DisplayName("VIA")
                </th>
                <th>
                    @Html.DisplayName("TRECHO")
                </th>

            </tr>


            <tr>
                <td>
                    @Html.DisplayFor(model => model.CidadeOrigem.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(model => model.CidadeDestino.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Via)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Trecho)
                </td>

            </tr>

        </table>
    </div>


    
    
      
      
        <table class="table table-condensed table-bordered">
            <tr>
                <th colspan="5" class="active">
                    <h3><i class="fa fa-info fa-lg" aria-hidden="true"></i> Informações do Paciente</h3>
                </th>
            </tr>
            <tr>
                <th colspan="5" >
                    <h4> @Html.DisplayFor(model => model.Paciente.nome) </h4>
                </th>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente.cpf)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente.rg)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente.orgaoemissor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente.dt_Emissao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente.cns)
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Paciente.cpf)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Paciente.rg)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Paciente.orgaoemissor)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Paciente.dt_Emissao)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Paciente.cns)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente.nome_Mae)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente.nome_Pai)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente.tel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente.cel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Paciente.email)
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Paciente.nome_Mae)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Paciente.nome_Pai)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Paciente.tel)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Paciente.cel)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Paciente.email)
                </td>
            </tr>
            <tr></tr>
        </table>
  
</div>

 
  
    <table class="table table-condensed table-bordered ">
        <tr>
            <th colspan="7" class="active">
                <h3> Informações  dos Acompanhantes</h3>
            </th>
        </tr>
        <tr>
            <th>
                @Html.Label("CPF", new { @class = "control-label" })
            </th>
            <th>
                @Html.Label("Nome", new { @class = "control-label" })
            </th>
            <th>
                @Html.Label("Data de Nascimento", new { @class = "control-label" })
            </th>
            <th>
                @Html.Label("Idade", new { @class = "control-label" })
            </th>
            <th>
                @Html.Label("Telefone", new { @class = "control-label" })
            </th>
            <th>
                @Html.Label("Celular", new { @class = "control-label" })
            </th>
            <th>
                @Html.Label("Cartão do SUS", new { @class = "control-label" })
            </th>
        </tr>
        @foreach (var item in Model.PessoaRequisicao)
            {
            <tr>
                <td>
                    @item.Pessoa.cpf
                </td>
                <td>
                    @item.Pessoa.nome
                </td>
                <td>
                    @item.Pessoa.dt_Nascimento.ToShortDateString()
                </td>
                <td>
                    @item.Pessoa.idade
                </td>
                <td>
                    @item.Pessoa.tel
                </td>
                <td>
                    @item.Pessoa.cel
                </td>
                <td>
                    @item.Pessoa.cns
                </td>
            </tr>
        }
    </table>

<hr />
<div class="row">
    <div class="col-sm-offset-9">
        <br />
        <i class="fa fa-thumbs-up" aria-hidden="true">
        </i>
        Autorizado :
        <br /><br />
        _______________________________
        <br />
        Jair Montes
        <br />
        Gerente/TFD/SESAU
    </div>
</div>
<p></p>

<div class="row">
    <div class="col-md-12">
        <h3>
            Recebi o(s) bilhete(s) de passagem(ns) n°(s) ______________________________________________de acordo com a presente requisição.
        </h3>
        <br />
    </div>
    <div class="col-sm-offset-1">
        <p>
            Assinatura Paciente ou Responsável<br /><br /><br />
            RG:_____________________________________________
        </p>
    </div>
</div>
<hr />

<footer>
    <div>
        @Html.DisplayFor(m => m.Usuario.Pessoa.nome)
    </div>
    <div>
        @DateTime.Now
    </div>
</footer>
