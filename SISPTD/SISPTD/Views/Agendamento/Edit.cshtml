@model SISPTD.Models.Agendamento
@using (Html.BeginForm())
{
    @Html.HiddenFor(a=> a.agendamentoId)
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h3> <i class="fa fa-book" aria-hidden="true"></i> Editar Agendamento</h3>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Pessoa.cpf, new { @class = "" })
                        @Html.EditorFor(model => model.Pessoa.cpf, new { htmlAttributes = new { @class = "form-control cpf ", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Pessoa.cpf, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4 ">
                    <div class="form-group ">
                        @Html.Label("Paciente", new { @class = "" })
                        @Html.EditorFor(model => model.Pessoa.nome, new { htmlAttributes = new { @class = " uperText form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Pessoa.nome, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-5 ">
                    <div class="form-group">
                        @Html.LabelFor(model => model.dt_Agendamento, htmlAttributes: new { @class = "control-label col-md-8" })
                        @Html.EditorFor(model => model.dt_Agendamento, new { htmlAttributes = new { @class = "form-control date" } })
                        @Html.ValidationMessageFor(model => model.dt_Agendamento, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <hr />

            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        @Html.LabelFor(model => model.observacoes, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextAreaFor(model => model.observacoes, 5, 150, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.observacoes, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="well well-sm">
        <input type="submit" name="name" class="btn btn-primary " value="Salvar " />
        @Html.ActionLink("Voltar para lista", "Index", null, new { @class = "btn btn-link pull-right" })
    </div>

}



