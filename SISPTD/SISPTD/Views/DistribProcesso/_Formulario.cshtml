@model SISPTD.Models.DistribProcesso

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-default">
        <div class="panel-body">
            <h4>Distribuição de Processo</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-3">
                    @Html.Label("CPF")
                    <div class="input-group">
                        @Html.TextBox("buscarPacienteDistrib", Request.QueryString["CPF"], new { autofocus = "", @class = "  cpf col-md-2 form-control", placeholder = "Procure por CPF" })
                        <span class="input-group-btn"><button type="button" class="btn btn-default buscarPacienteDistrib"><i class="glyphicon glyphicon-search"></i></button></span>
                    </div>

                </div>
                <div class="col-md-7">
                    <div class="form-group">
                        @Html.Label("Nome do Paciente")
                        <input type="text" id="nomePacienteDistrib" readonly class="form-control paciente" name="name" value=" " />
                        <input type="hidden" id="idPacienteDistrib" class="form-control paciente" name="idPacienteDistrib" value=" " />
                        @Html.ValidationMessageFor(model => model.Pessoa.nome, null, new { @class = "text-danger" })
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                  
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SetorDestinoId, "Setor Destino", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("SetorDestinoId", null, "Selecione Setor de Destino", htmlAttributes: new { @class = "form-control chosen-select" })
                        @Html.ValidationMessageFor(model => model.SetorDestinoId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group">
                        @Html.LabelFor(model => model.observacoes, htmlAttributes: new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.observacoes, 5, 175, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.observacoes, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>




