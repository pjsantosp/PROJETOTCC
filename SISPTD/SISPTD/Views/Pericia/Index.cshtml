@model IEnumerable<SISPTD.Models.SolicitacaoPericia>

@{
    ViewBag.Title = "Pericia Medica";
}

<h3><i class="glyphicon glyphicon-list-alt"></i> Pericia Medica</h3>

<p>
    @Html.ActionLink("Nova Pericia", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
       <th>
        @Html.DisplayNameFor(model => model.Paciente.cpf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paciente.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dt_Pericia)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Paciente.cpf)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Paciente.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dt_Pericia)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.periciaId }) |
            @Html.ActionLink("Details", "Details", new { id=item.periciaId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.periciaId })
        </td>
    </tr>
}

</table>
